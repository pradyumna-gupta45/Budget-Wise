{
    "manifest_version": 2,

    "name": "Budget Wise",
    "description": "This extension tracks your overall spendings.",
    "version": "1.0",
    "icons": {
        "128": "img128.png",
        "48": "img48.png",
        "16": "img16.png"
    },

    "browser_action": {
        "default_icon": "img16.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },

    "permissions": [
        "storage",
        "notifications",
        "contextMenus"
    ],

    "options_page": "options.html"
}